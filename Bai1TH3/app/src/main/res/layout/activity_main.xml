<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FA1818"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/nhan"
        android:layout_width="393dp"
        android:layout_height="52dp"
        android:background="#79E80B"
        android:text="Casio"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvB"
        android:layout_width="42dp"
        android:layout_height="29dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="12dp"
        android:text="Số A"
        app:layout_constraintEnd_toStartOf="@+id/txtSoA"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nhan" />

    <TextView
        android:id="@+id/tvB"
        android:layout_width="45dp"
        android:layout_height="23dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="72dp"
        android:text="Số B"
        app:layout_constraintBottom_toTopOf="@+id/txtKetQua"
        app:layout_constraintEnd_toStartOf="@+id/txtSoB"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvB"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:layout_width="378dp"
        android:layout_height="305dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtKetQua">

        <Button
            android:id="@+id/btnTong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#65BC2E"
            android:text="Tổng" />

        <Button
            android:id="@+id/btnHieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#65BC2E"
            android:text="Hiệu" />

        <Button
            android:id="@+id/btnTich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#65BC2E"
            android:text="Tích" />

        <Button
            android:id="@+id/btnThuong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#65BC2E"
            android:text="Thương" />

        <Button
            android:id="@+id/btnUoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#65BC2E"
            android:text="Ước chung lớn nhất" />

        <Button
            android:id="@+id/btnThoat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#65BC2E"
            android:text="Thoát" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtKetQua"
        android:layout_width="296dp"
        android:layout_height="57dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.382" />

    <EditText
        android:id="@+id/txtSoB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/txtKetQua"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.549"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSoA"
        app:layout_constraintVertical_bias="0.733" />

    <EditText
        android:id="@+id/txtSoA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.549"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nhan" />

</androidx.constraintlayout.widget.ConstraintLayout>